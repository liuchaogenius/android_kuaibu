<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/yhd_activity_header" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@color/shouye_bott_divide" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#e2e2e2" >

        <LinearLayout
            android:id="@+id/mine_user_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 绿色背景，用户头像，名称，权限的layout -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:background="@drawable/wodedianpu_backg"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wodedianpu_add_backg" />
            </LinearLayout>

            <!-- 白色背景，三个按钮 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="50dip"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dip"
                            android:layout_marginTop="10dip"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/kb_user_icon" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/umyadduser"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="修改头像 " />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_wode_arrow" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- listview, 菜单选项 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="50dip"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dip"
                            android:layout_marginTop="10dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="姓      名: "
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/umyadduser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="李某 " />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/shouye_bott_divide" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="50dip"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dip"
                            android:layout_marginTop="10dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="名      称: "
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/umyadduser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="某某装饰布有限公司 " />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/shouye_bott_divide" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="50dip"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dip"
                            android:layout_marginTop="10dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="联系电话: "
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/umyadduser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13100000000 " />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/shouye_bott_divide" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="50dip"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dip"
                            android:layout_marginTop="10dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我的关注: "
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/umyadduser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="装饰布" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/shouye_bott_divide" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="50dip"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dip"
                            android:layout_marginTop="10dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="地        址: "
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/umyadduser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="江西省 南昌市 新湖区 " />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/shouye_bott_divide" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="50dip"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dip"
                            android:layout_marginTop="10dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="主营产品: "
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/umyadduser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="装饰品，小饰品，大件商品，飞机，航天器，宇宙飞船" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                
                
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/shouye_bott_divide" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="50dip"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dip"
                            android:layout_marginTop="10dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="店铺介绍: "
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/umyadduser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="你要什么布，尽管说出来，我们这里都有，没有的话，抢银行也给你弄到" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            
            
            
            
            
            
            
            		<LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        
                        android:orientation="vertical" >
                
            		    
            		    <Button 
            		        android:layout_width="fill_parent"
            		        android:layout_height="wrap_content"
            		        android:layout_marginTop="10dip"
            		        android:layout_marginBottom="10dip"
            		        android:background="@drawable/yh_round_redbg_style"
            		        android:text="确认修改"
            		        android:textColor="@color/white"
            		        />

                        
                    </LinearLayout>
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>