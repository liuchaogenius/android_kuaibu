<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent" 
    >

    <com.yibu.kuaibu.ui.swipexlistview.swipe.SwipeLayout
        android:id="@+id/myswipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        
        >
        
        <LinearLayout 
            android:id="@+id/ll_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            ></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/test_yhdwodegongyingpic2" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/image"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/image"
                android:maxLines="1"
                android:text="寻迪龙里布"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/vip_mark"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@id/title"
                android:layout_toRightOf="@id/title"
                android:src="@drawable/vipsmall"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/image" >

                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="状态：现货"
                    android:textColor="#ff4100"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/state"
                    android:layout_below="@id/state"
                    android:text="2014-10-22"
                    android:textColor="#999999"
                    android:layout_marginTop="3dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="供应周期：30天"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sort"
                    android:layout_alignLeft="@id/sort"
                    android:layout_marginTop="3dp"
                    android:maxLines="1"
                    android:text="采购数量：5000米"
                    android:textColor="#999999"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>
    </com.yibu.kuaibu.ui.swipexlistview.swipe.SwipeLayout>

</LinearLayout>