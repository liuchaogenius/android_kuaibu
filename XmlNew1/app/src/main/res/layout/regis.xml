<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/regis_header"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/head_color"
        android:gravity="center_vertical"
        android:padding="0.0px" >

        <ImageView
            android:id="@+id/regis_header_back_button"
            android:layout_width="44dip"
            android:layout_height="52dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dip"
            android:background="@drawable/regis_header_back_ground" />

        <TextView
            android:id="@+id/regis_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:orientation="horizontal"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="20.0dip" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_marginTop="12dip"
                android:background="@color/shouye_bott_divide" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="66dip"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="44dip"
                            android:layout_height="44dip"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/regis_tel" />

                        <EditText
                            android:id="@+id/registele"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="手机号码"
                            android:numeric="integer"
                            android:textColorHint="#d3d3d3" />

                        <Button
                            android:id="@+id/regisgetcheck"
                            android:layout_width="95dip"
                            android:layout_height="44dip"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/regis_get_check_button" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2px"
                        android:background="@color/shouye_bott_divide" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="@color/shouye_bott_divide" />

                <LinearLayout
                    android:id="@+id/checkLinear"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="66dip"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="44dip"
                            android:layout_height="44dip"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/regis_check" />

                        <EditText
                            android:id="@+id/regidentifier"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="验证码"
                            android:numeric="integer"
                            android:textColorHint="#d3d3d3" />

                        <TextView
                            android:id="@+id/checknoticer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/regis_check_notice"
                            android:textColor="#8d8d8d"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2px"
                        android:background="@color/shouye_bott_divide" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="@color/shouye_bott_divide" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="66dip"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="44dip"
                            android:layout_height="44dip"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/regis_password" />

                        <EditText
                            android:id="@+id/regpsw"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:hint="密码"
                            android:password="true"
                            android:textColorHint="#d3d3d3" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2px"
                        android:background="@color/shouye_bott_divide" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="@color/shouye_bott_divide" />

                <LinearLayout
                    android:id="@+id/testLinear"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="66dip"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="44dip"
                            android:layout_height="44dip"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/regis_password_confirm" />

                        <EditText
                            android:id="@+id/regpswc"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:hint="确认密码"
                            android:password="true"
                            android:textColorHint="#d3d3d3" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2px"
                        android:background="@color/shouye_bott_divide" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:background="@color/shouye_bott_divide" />

            <Button
                android:id="@+id/regis_confirm"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="21dip"
                android:background="@drawable/regis_confirm"
                android:text="确 定"
                android:textColor="@color/white"
                android:textSize="18dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>