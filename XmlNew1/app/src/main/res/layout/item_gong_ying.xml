<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white"
  >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="74dp"

    >
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/pic"
        android:layout_width="74dp"
        android:layout_height="65dp"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
android:scaleType="centerCrop"
        />
    <LinearLayout
        android:id="@+id/title_wrap"
        android:layout_marginLeft="3dp"
        android:layout_alignTop="@id/pic"
        android:layout_toRightOf="@id/pic"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寻迪龙里布"
            />
        <TextView
            android:id="@+id/title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff0000"
            android:text="VIP"
            android:textColor="@color/white"
            />
        </LinearLayout>
       <LinearLayout
           android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/title_wrap"
           android:layout_toRightOf="@id/pic"
            android:layout_below="@id/title_wrap"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="17dp"
               android:textColor="@color/black"
               android:text="分类："
               />
            <TextView
                android:id="@+id/fenlei_text"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="15dp"
                android:text="化纤、纯棉、樱花、草木、嘎达、曹操"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/state"
                    android:textColor="#ff4100"
                    android:textSize="15dp"
                    android:text="状态：促销中"
                    />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-10-20"
                    android:textColor="#999999"
                    android:textSize="12dp"
                    android:layout_gravity="end"
                    />
                </LinearLayout>

           </LinearLayout>

    </RelativeLayout>

</FrameLayout>